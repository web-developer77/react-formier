{
  "compilerOptions": {
    "target": "es5",
    "allowJs": true,
    "preserveConstEnums": true,
    "rootDir": "src",
    "outDir": "lib",
    "noImplicitAny": false,
    "sourceMap": false,
    "declaration": true,
    "module": "es6",
    "moduleResolution": "node",
    "jsx": "react",
    "lib": [
      "es2015",
      "dom"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.tsx",
    "src/**/*.jsx"
  ],
  "exclude": [
    "src/**/fixtures/*.js",
    "src/**/*.spec.js",
    "src/**/*.unit.js",
    "src/**/*.spec.ts",
    "src/**/*.unit.ts"
  ]
}
